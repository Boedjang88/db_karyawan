// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JenisKelamin { pria, wanita }
enum StatusNikah { belum_nikah, nikah }

model Golongan {
  id                  Int        @id @default(autoincrement())
  nama_golongan       String     @db.VarChar(100)
  gaji_pokok          Int
  tunjangan_istri     Int
  tunjangan_anak      Int
  tunjangan_transport Int
  tunjangan_makan     Int
  karyawan            Karyawan[]
}

model Karyawan {
  id            Int         @id @default(autoincrement())
  nip           String      @unique @db.VarChar(12)
  nik           String      @unique @db.VarChar(12)
  nama          String      @db.VarChar(100)
  jenis_kelamin JenisKelamin
  tempat_lahir  String      @db.VarChar(100)
  tanggal_lahir DateTime    @db.Date
  telpon        String      @db.VarChar(12)
  agama         String      @db.VarChar(15)
  status_nikah  StatusNikah
  alamat        String      @db.Text
  foto          String      @db.VarChar(150)
  golongan_id   Int
  golongan      Golongan    @relation(fields: [golongan_id], references: [id])
  penggajian    Penggajian[]
  lembur        Lembur[]
  cuti          Cuti[]
}

model Lembur {
  id             Int      @id @default(autoincrement())
  tanggal_lembur DateTime @db.Date
  jumlah         Int
  karyawan_id    Int
  karyawan       Karyawan @relation(fields: [karyawan_id], references: [id])
}

model Cuti {
  id           Int      @id @default(autoincrement())
  tanggal_cuti DateTime @db.Date
  jumlah       Int
  karyawan_id  Int
  karyawan     Karyawan @relation(fields: [karyawan_id], references: [id])
}

model Penggajian {
  id                  Int       @id @default(autoincrement())
  karyawan_id         Int
  karyawan            Karyawan  @relation(fields: [karyawan_id], references: [id])
  bulan               Int       // <--- tambahkan ini
  tahun               Int       // <--- tambahkan ini
  tanggal_gajian      DateTime
  gaji_pokok_saat_itu Int
  total_tunjangan     Int
  total_upah_lembur   Int
  total_potongan_cuti Int
  gaji_diterima       Int
  keterangan          String?
}
